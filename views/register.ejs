<!-- views/register.ejs - COMPLETE REPLACEMENT FILE -->

<%- include('partials/header') %>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Register</h1>

            <!-- Registration Requirements Summary -->
            <div class="alert alert-info mb-3">
                <p class="mb-1"><strong>Registration Requirements:</strong></p>
                <ul class="mb-0 small">
                    <li>Username: At least 2 characters, must contain letters, can include numbers (no spaces or special characters)</li>
                    <li>Email: Must be a valid email address (include @ and domain)</li>
                    <li>Password: At least 8 characters, must contain at least one letter and one number</li>
                </ul>
            </div>

            <!-- Validation Errors -->
            <% if(typeof errors !== 'undefined' && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul class="mb-0">
                        <% errors.forEach(function(error) { %>
                            <li><%= error.msg %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <!-- Registration Form -->
            <form action="/auth/register" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input
                            type="text"
                            id="username"
                            name="username"
                            class="form-control <%= typeof errors !== 'undefined' && errors.find(err => err.param === 'username') ? 'is-invalid' : '' %>"
                            placeholder="Enter Username"
                            value="<%= typeof username != 'undefined' ? username : '' %>"
                            required
                    />
                    <div class="form-text">
                        Minimum 2 characters, must include letters, can have numbers (no spaces or special characters)
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control <%= typeof errors !== 'undefined' && errors.find(err => err.param === 'email') ? 'is-invalid' : '' %>"
                            placeholder="Enter Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>"
                            required
                    />
                    <div class="form-text">
                        Must be a valid email address (include @ and domain)
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control <%= typeof errors !== 'undefined' && errors.find(err => err.param === 'password') ? 'is-invalid' : '' %>"
                            placeholder="Create Password"
                            required
                    />
                    <div class="form-text">
                        Minimum 8 characters, must include at least one letter and one number
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password2" class="form-label">Confirm Password</label>
                    <input
                            type="password"
                            id="password2"
                            name="password2"
                            class="form-control <%= typeof passwordMismatch !== 'undefined' && passwordMismatch ? 'is-invalid' : '' %>"
                            placeholder="Confirm Password"
                            required
                    />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
            <p class="mt-3 text-center">
                Have an account? <a href="/auth/login">Login</a>
            </p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>